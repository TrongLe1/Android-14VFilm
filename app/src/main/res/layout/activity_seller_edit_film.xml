        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border_layout_film"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etFilmEditDetailDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textSize="20dp"
                android:hint="Nhập độ dài phim"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border_layout_film"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh đại diện của phim:"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/ivFilmEditDetailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:src="@drawable/film"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border_layout_film"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn video trailer phim:"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="HardcodedText" />

            <VideoView
                android:id="@+id/vvVideoUpload"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <Button
                android:id="@+id/btnSelectTrailer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tải Video Trailer lên"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border_layout_film"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn full video phim:"
                android:textSize="20dp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <VideoView
                android:id="@+id/vvFullVideoUpload"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <Button
                android:id="@+id/btnSelectFullVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tải Full Video"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSaveChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:backgroundTint="@color/purple_700"
            android:text="Lưu chỉnh sửa"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>