<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <ImageView
        android:id="@+id/IVTrans"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/more_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVNameTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/IVTrans"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVRentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/IVTrans"
        app:layout_constraintTop_toBottomOf="@+id/TVNameTrans" />

    <TextView
        android:id="@+id/TVExpiredDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/IVTrans"
        app:layout_constraintTop_toBottomOf="@+id/TVRentDate" />

    <TextView
        android:id="@+id/TVPriceTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/BTNLike"
        app:layout_constraintTop_toBottomOf="@+id/BTNLike" />

    <Button
        android:id="@+id/BTNDislike"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:text="Tệ"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/IVTrans"
        app:layout_constraintTop_toBottomOf="@+id/TVExpiredDate" />

    <Button
        android:id="@+id/BTNLike"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Tốt"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVExpiredDate" />

</androidx.constraintlayout.widget.ConstraintLayout>