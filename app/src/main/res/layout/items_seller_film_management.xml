<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_film"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSellerFilmImageItem"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/film" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSellerFilmNameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phim truyền hình"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:id="@+id/tvSellerFilmDescriptionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Short description"
            android:lines="2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvSellerFilmCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quốc gia: Mỹ"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvSellerFilmDatePublishedItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đăng: 28/04/2022"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right|bottom"
            tools:ignore="RtlHardcoded">

            <Button
                android:id="@+id/btnItemDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết"
                tools:ignore="HardcodedText"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>