<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sellerActivity.SellerUploadFilmActivity"
    android:fillViewport="true"
    android:overScrollMode="never"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng phim mới"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/ivFilmImage"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:src="@drawable/film"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên phim:"
            />

        <EditText
            android:id="@+id/etFilmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập tên phim"
            android:layout_marginBottom="10sp"
            />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả phim:"
            />

        <EditText
            android:id="@+id/etFilmDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mô tả về phim"
            android:layout_marginBottom="10sp"
            />

        <Spinner
            android:id="@+id/spnCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/category"
            android:layout_marginBottom="10sp"
            />

        <Spinner
            android:id="@+id/spnCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/country"
            android:layout_marginBottom="10sp"
            />

        <TextView
            android:id="@+id/tvRentPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá thuê:"
            />

        <EditText
            android:id="@+id/etFilmRentPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập giá thuê"
            android:layout_marginBottom="10sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá mua:"
            />

        <EditText
            android:id="@+id/etFilmPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập giá mua"
            android:layout_marginBottom="10sp"
            />

        <Spinner
            android:id="@+id/spnFilmLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/type"
            />

        <EditText
            android:id="@+id/etFilmDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập độ dài"
            android:layout_marginBottom="10sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnFilmUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng sản phẩm"
                android:layout_marginBottom="5sp"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>