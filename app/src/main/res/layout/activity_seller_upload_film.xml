                <Button
                    android:id="@+id/btnFilmUpload"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng sản phẩm"
                    tools:ignore="HardcodedText" />

<!--            </LinearLayout>-->
<!--        </LinearLayout>-->

    </LinearLayout>

</ScrollView>