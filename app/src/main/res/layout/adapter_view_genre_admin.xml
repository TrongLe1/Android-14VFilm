<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_layout_admin"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/viewgenreadmin_imageView"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/admin_genre_management_button"
            tools:ignore="RtlHardcoded"></de.hdodenhof.circleimageview.CircleImageView>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewgenreadmin_tvGenreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên thể loại"
                android:textSize="20sp"
                android:textStyle="bold"

                tools:ignore="HardcodedText" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>