<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/viewadsdetail_IVDetail"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/more_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/viewadsdetail_BTNDelete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="337dp"
            android:background="@color/dark_blue"
            android:drawableLeft="@drawable/delete"
            android:text="Xóa quảng cáo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewadsdetail_IVDetail" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewadsdetail_BTNSave"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="337dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/save"
            android:paddingLeft="10dp"
            android:text="Lưu thay đổi"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewadsdetail_IVDetail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>


