<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".adminActivity.ViewGenreDetailActivity">

        <ImageView
            android:id="@+id/viewgenredetail_IVDetail"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/more_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/viewgenredetail_TVDName"
            android:layout_width="363dp"
            android:layout_height="69dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Tên Thể loại"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewgenredetail_IVDetail" />

        <Button
            android:id="@+id/viewgenredetail_BTNDelete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="240dp"
            android:background="@color/dark_blue"
            android:drawableLeft="@drawable/delete"
            android:text="Xóa thể loại"
            app:layout_constraintStart_toEndOf="@+id/viewgenredetail_BTNSave"
            app:layout_constraintTop_toBottomOf="@+id/viewgenredetail_TVDName" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewgenredetail_BTNSave"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="204dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/save"
            android:paddingLeft="10dp"
            android:text="Lưu thay đổi"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewgenredetail_TVDName"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


